{
  "compilerOptions": {
    "noEmit": true,
    "allowJs": true,
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "__tests__/**/*", "jest.config.mjs", "tsup.config.ts"],
  "exclude": ["node_modules"]
}
